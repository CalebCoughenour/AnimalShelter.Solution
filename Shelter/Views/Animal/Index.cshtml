@{
  Layout = "_Layout";
}

@using Shelter.Models;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
}

@foreach (Animal animal in Model)
{
  <li>@animal.Name</li>
  <li>@animal.AnimalType</li>
  <li>@animal.Breed</li>
}

<button class="btn btn-success">@Html.ActionLink("Add Animal", "Create")</button>
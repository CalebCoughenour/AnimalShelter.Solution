@{
  Layout = "_Layout";
}

@using Shelter.Models;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
}

<div class="cardWrapper">
@foreach (Animal animal in Model)
  {
    <div class="animalCard">
      <li>@animal.Name</li>
      <li>@animal.AnimalType</li>
      <li>@animal.Breed</li>
      <li>@animal.DateOfAdmit</li>
    </div>
  }
</div>

<p>@Html.ActionLink("Add Animal", "Create")</p>